{
	"name": "@ctx-core/webgl",
	"version": "6.0.3",
	"description": "ctx-core webgl",
	"keywords": [
		"ctx-core",
		"webgl"
	],
	"homepage": "https://github.com/ctx-core/webgl#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/webgl/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/webgl/issues"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs"
	},
	"scripts": {
		"build": "npm run clean && npm run copy-mjs && npm run compile",
		"clean": "rm -f tsconfig.tsbuildinfo && rm -f src/**/*.js && rm -f src/**/*.d.ts && rm -f src/**/*.map",
		"compile": "./node_modules/.bin/tsc -b .",
		"copy-mjs": "cd dist && echo \"export * from './index.js'\" > index.mjs",
		"exec": "$@",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"typescript": "^4.3.5"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	}
}
